@model CRUDMVC.Models.BasicInformation

@{
    ViewBag.Title = "Edit Basic Information";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="container" style="border:1px solid">
        <div class="row">

            <div class="col-sm-12">

                <div style="border-bottom: 1px solid;padding: 12px;background-color: aliceblue;">
                    Edit Basic Information
                </div>

                <div class="box-body">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group">
                        <label>Name</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Address</label>
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <input type="submit" name="submit" value="Update" class="btn btn-success" />
                        <a href="@Url.Action("Index", "BasicInformations")" class="btn btn-default">Back to List</a>
                        @if (ViewBag.message != "")
                        {
                            <span style="color:red">@ViewBag.message</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
