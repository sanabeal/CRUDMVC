@model CRUDMVC.Models.BasicInformation

@{
    ViewBag.Title = "Details Basic Information";
}

<div class="container" style="border:1px solid">
    <div class="row">

        <div class="col-sm-12">

            <div style="border-bottom: 1px solid;padding: 12px;background-color: aliceblue;">
                Details Basic Information
            </div>

            <div class="box-body">                              
                <div class="form-group">
                    <label>Name</label>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly" } })                   
                </div>

                <div class="form-group">
                    <label>Address</label>
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly" } })                 
                </div>

                <div class="form-group">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-success"})
                    @Html.ActionLink("Back to List", "Index", "BasicInformations", new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
</div>
